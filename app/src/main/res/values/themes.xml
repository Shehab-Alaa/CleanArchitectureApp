<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CleanArchitectureApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mid_grey</item>
        <item name="colorPrimaryVariant">@color/mid_grey</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mid_grey</item>
        <item name="colorSecondaryVariant">@color/mid_grey</item>
        <item name="colorOnSecondary">@color/light_grey</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/app_back</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CleanArchitectureApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>