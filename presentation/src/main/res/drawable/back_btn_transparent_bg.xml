<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/ripple_effect"
    tools:targetApi="lollipop">
    <item
        android:id="@android:id/mask"
        tools:targetApi="lollipop">
        <shape android:shape="oval">
            <solid android:color="@color/ripple_effect" />
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="oval">
            <corners android:radius="@dimen/_8sdp"/>
            <solid android:color="@color/transparent"/>
            <padding android:top="@dimen/_8sdp" android:bottom="@dimen/_8sdp" android:right="@dimen/_8sdp" android:left="@dimen/_8sdp"/>
        </shape>
    </item>
</ripple>